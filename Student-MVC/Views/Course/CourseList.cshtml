@model IEnumerable<Student_MVC.Models.Course>

@{
    ViewData["Title"] = "CourseList";
}

<h1>CourseList</h1>

<p>
    <a asp-action="CreateCourse">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CourseName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CourseName)
            </td>
            <td>
                <a asp-action="EditCourse" asp-route-id="@item.CourseId">Edit</a> |
                <a asp-action="CourseDetails" asp-route-id="@item.CourseId">Details</a> 
            </td>
        </tr>
}
    </tbody>
</table>
