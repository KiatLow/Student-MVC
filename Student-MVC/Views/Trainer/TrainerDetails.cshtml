@model Student_MVC.Models.Trainer

@{
    ViewData["Title"] = "TrainerDetails";
}

<h1>TrainerDetails</h1>

<div>
    <h4>Trainer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TrainerName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TrainerName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Username)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Username)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Password)
        </dt>
        <dd class="col-sm-10">
            <div id="Password">@Model.Password</div>
            <div id="msg" style="color:red">Password is hidden</div>
        </dd>
        <dd>
            <input type="button" id="btn" value="Show Passward">
        </dd>
    </dl>
</div>
<div>
    <a asp-action="EditTrainer" asp-route-id="@Model?.TrainerId">Edit</a> |
    <a asp-action="DeleteTrainer" asp-route-id="@Model?.TrainerId">Delete</a> |
    <a asp-action="TrainerList">Back to List</a>
</div>
@section Scripts{
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
<script>
    $('#Password').hide()
    $('#btn').mouseup(function(){
        $('#Password').hide()
        $('#msg').show()
    })
    $('#btn').mousedown(function(){
        $('#Password').show()
        $('#msg').hide()
    })
</script>
}